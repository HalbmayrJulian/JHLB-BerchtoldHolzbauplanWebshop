@page
@model Webshop_Berchtold.Pages.LoginModel
@{
    ViewData["Title"] = "Anmelden";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="login-container">
                <div class="text-center mb-4">
                    <img src="~/images/logo.png" alt="Berchtold Logo" class="logo mb-3" style="height: 60px;" />
                    <h2 class="h4" style="color: var(--color-dark);">Anmelden</h2>
                    <p class="text-muted">Melden Sie sich in Ihrem Konto an</p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">E-Mail-Adresse</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="ihre.email@beispiel.com" autocomplete="username">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Passwort</label>
                        <div class="input-group">
                            <input asp-for="Input.Password" class="form-control" placeholder="Ihr Passwort" autocomplete="current-password">
                            <button class="btn btn-secondary" type="button" onclick="togglePassword()">
                                <i class="bi bi-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input">
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            Angemeldet bleiben
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Anmelden
                        </button>
                    </div>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted">
                            Noch kein Konto? 
                            <a asp-page="/Register" style="color: var(--color-green);">
                                Jetzt registrieren
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
    function togglePassword() {
        var passwordField = document.querySelector('input[asp-for="Input.Password"]');
        var toggleIcon = document.getElementById('toggleIcon');
        
        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            toggleIcon.className = 'bi bi-eye-slash';
        } else {
            passwordField.type = 'password';
            toggleIcon.className = 'bi bi-eye';
        }
    }
    </script>
}