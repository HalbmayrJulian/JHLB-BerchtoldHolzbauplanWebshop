@page
@model Webshop_Berchtold.Pages.Admin.EditProductModel
@{
    ViewData["Title"] = "Produkt bearbeiten";
}

<div class="admin-dashboard">
    <!-- Header Section -->
    <div class="admin-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-page="/Admin">Admin Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Produkt bearbeiten</li>
                        </ol>
                    </nav>
                    <h1 class="admin-title">
                        <i class="bi bi-pencil-square"></i> Produkt bearbeiten
                    </h1>
                    <p class="admin-subtitle text-muted">Bearbeiten Sie @Model.Product.Name</p>
                </div>
            </div>
            <hr class="admin-divider">
        </div>
    </div>

    <!-- Form Section -->
    <div class="container-fluid">
        <div class="admin-tab-content">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <form method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Product.Id" />
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <!-- Aktuelles Produktbild -->
                                @if (!string.IsNullOrEmpty(Model.Product.BildUrl))
                                {
                                    <div class="mb-4">
                                        <h5 class="text-dark">Aktuelles Bild</h5>
                                        <div class="position-relative d-inline-block">
                                            <img src="@Model.Product.BildUrl" alt="@Model.Product.Name" 
                                                 class="img-thumbnail" style="max-width: 300px; max-height: 300px;" />
                                            <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2"
                                                    onclick="deleteImage(@Model.Product.Id)">
                                                <i class="bi bi-trash"></i> Löschen
                                            </button>
                                        </div>
                                    </div>
                                }

                                <!-- Neues Produktbild -->
                                <h4 class="mb-3 text-dark">
                                    <i class="bi bi-image text-success"></i> Produktbild @(string.IsNullOrEmpty(Model.Product.BildUrl) ? "" : "ändern")
                                </h4>

                                <div class="mb-4">
                                    <label for="BildDatei" class="form-label fw-bold">@(string.IsNullOrEmpty(Model.Product.BildUrl) ? "Bild hochladen" : "Neues Bild hochladen")</label>
                                    <input type="file" 
                                           id="BildDatei" 
                                           name="BildDatei" 
                                           class="form-control" 
                                           accept="image/*"
                                           onchange="previewImage(event)" />
                                    <small class="text-muted">Lassen Sie das Feld leer, um das aktuelle Bild zu behalten</small>
                                    
                                    <!-- Bildvorschau -->
                                    <div id="imagePreview" class="mt-3" style="display: none;">
                                        <p class="fw-bold">Neue Vorschau:</p>
                                        <img id="preview" src="" alt="Vorschau" class="img-thumbnail" style="max-width: 300px; max-height: 300px;" />
                                    </div>
                                </div>

                                <!-- Grundlegende Informationen -->
                                <h4 class="mb-3 text-dark">
                                    <i class="bi bi-info-circle text-success"></i> Grundlegende Informationen
                                </h4>

                                <div class="row mb-3">
                                    <div class="col-md-8">
                                        <label asp-for="Product.Name" class="form-label fw-bold">Produktname *</label>
                                        <input asp-for="Product.Name" class="form-control" />
                                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Product.KategorieId" class="form-label fw-bold">Kategorie</label>
                                        <select asp-for="Product.KategorieId" asp-items="Model.Categories" class="form-select">
                                            <option value="">-- Keine Kategorie --</option>
                                        </select>
                                        <span asp-validation-for="Product.KategorieId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Product.Beschreibung" class="form-label fw-bold">Beschreibung</label>
                                    <textarea asp-for="Product.Beschreibung" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Product.Beschreibung" class="text-danger"></span>
                                </div>

                                <!-- Preis und Verfügbarkeit -->
                                <h4 class="mb-3 mt-4 text-dark">
                                    <i class="bi bi-cash-coin text-success"></i> Preis und Verfügbarkeit
                                </h4>

                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label asp-for="Product.Preis" class="form-label fw-bold">Preis (€) *</label>
                                        <div class="input-group">
                                            <span class="input-group-text">€</span>
                                            <input asp-for="Product.Preis" class="form-control" type="number" step="0.01" min="0" />
                                        </div>
                                        <span asp-validation-for="Product.Preis" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Product.Anzahl" class="form-label fw-bold">Anzahl auf Lager *</label>
                                        <input asp-for="Product.Anzahl" class="form-control" type="number" min="0" />
                                        <span asp-validation-for="Product.Anzahl" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Product.Einheit" class="form-label fw-bold">Einheit *</label>
                                        <input asp-for="Product.Einheit" class="form-control" />
                                        <span asp-validation-for="Product.Einheit" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="Product.IstVerfuegbar" class="form-check-input" type="checkbox" role="switch" />
                                        <label asp-for="Product.IstVerfuegbar" class="form-check-label fw-bold">
                                            Produkt ist verfügbar
                                        </label>
                                    </div>
                                </div>

                                <!-- Optionale Informationen -->
                                <h4 class="mb-3 mt-4 text-dark">
                                    <i class="bi bi-gear text-success"></i> Optionale Informationen
                                </h4>

                                <div class="mb-3">
                                    <label asp-for="Product.IconClass" class="form-label fw-bold">Icon Klasse (optional)</label>
                                    <input asp-for="Product.IconClass" class="form-control" placeholder="z.B. bi-wrench" />
                                    <span asp-validation-for="Product.IconClass" class="text-danger"></span>
                                </div>

                                <!-- Action Buttons -->
                                <hr class="my-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-page="/Admin" class="btn btn-secondary">
                                        <i class="bi bi-x-circle"></i> Abbrechen
                                    </a>
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="bi bi-check-circle"></i> Änderungen speichern
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');
            
            if (file) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';
                }
                
                reader.readAsDataURL(file);
            } else {
                previewContainer.style.display = 'none';
            }
        }

        function deleteImage(productId) {
            if (!confirm('Bild wirklich löschen?')) {
                return;
            }

            fetch(`/Admin/EditProduct?id=${productId}&handler=DeleteImage`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Fehler: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Ein Fehler ist aufgetreten');
            });
        }
    </script>
}
