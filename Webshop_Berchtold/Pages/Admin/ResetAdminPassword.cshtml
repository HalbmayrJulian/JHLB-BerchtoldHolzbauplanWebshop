@page
@model Webshop_Berchtold.Pages.Admin.ResetAdminPasswordModel
@{
    ViewData["Title"] = "Admin-Passwort zurücksetzen";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-shield-lock"></i> Admin-Passwort zurücksetzen</h4>
                </div>
                <div class="card-body">
                    @if (Model.IsSuccess)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> Admin-Benutzer wurde erfolgreich erstellt/zurückgesetzt!
                            <hr>
                            <p class="mb-1"><strong>Email:</strong> admin@berchtold.com</p>
                            <p class="mb-0"><strong>Passwort:</strong> 123!</p>
                            <hr>
                            <a asp-page="/Login" class="btn btn-success">Zur Anmeldung</a>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                        </div>
                    }

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warnung:</strong> Diese Aktion erstellt oder setzt den Admin-Benutzer zurück.
                    </div>

                    <form method="post">
                        <div class="mb-3">
                            <p>Klicken Sie auf den Button unten, um den Admin-Benutzer zu erstellen oder das Passwort zurückzusetzen.</p>
                            <ul>
                                <li>Email: <strong>admin@berchtold.com</strong></li>
                                <li>Passwort: <strong>123!</strong></li>
                            </ul>
                        </div>

                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-arrow-clockwise"></i> Admin-Benutzer erstellen/zurücksetzen
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
