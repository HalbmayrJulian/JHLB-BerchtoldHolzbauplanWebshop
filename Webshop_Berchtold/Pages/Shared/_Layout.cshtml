@using Microsoft.AspNetCore.Identity
@using Webshop_Berchtold.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Berchtold Holzbauplan</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Webshop_Berchtold.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="~/images/logo.png" alt="Berchtold Logo" class="logo" />
                    Berchtold Holzbauplan
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Navigation ein-/ausblenden">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">STARTSEITE</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                KATEGORIEN
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Schrauben & Verbindungen</a></li>
                                <li><a class="dropdown-item" href="#">Balken & Bretter</a></li>
                                <li><a class="dropdown-item" href="#">Werkzeuge</a></li>
                                <li><a class="dropdown-item" href="#">Dämmstoffe</a></li>
                                <li><a class="dropdown-item" href="#">Holzschutz</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Alle Kategorien</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/AboutmePage">ÜBER UNS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/KontaktPage">KONTAKT</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#searchModal">
                                <i class="bi bi-search"></i> Suchen
                            </a>
                        </li>
                        
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var firstName = User.FindFirst("FirstName")?.Value ?? "Benutzer";
                            var lastName = User.FindFirst("LastName")?.Value ?? "";
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> Hallo, @firstName
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li><h6 class="dropdown-header">@firstName @lastName</h6></li>
                                    <li><small class="dropdown-item-text text-muted">@User.Identity!.Name</small></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Profil</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-bag"></i> Meine Bestellungen</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear"></i> Einstellungen</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-page="/Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Abmelden
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Register">
                                    <i class="bi bi-person-plus"></i> Registrieren
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login">
                                    <i class="bi bi-person"></i> Anmelden
                                </a>
                            </li>
                        }
                        
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-cart"></i> Warenkorb <span class="badge bg-secondary">0</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="text-center">
                <small>
                    &copy; 2025 Berchtold Holzbauplan - 
                    <a asp-area="" asp-page="/Privacy">Datenschutz</a> | 
                    <a href="#">AGB</a> | 
                    <a href="#">Impressum</a> | 
                    <a href="#">Kontakt</a>
                </small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
