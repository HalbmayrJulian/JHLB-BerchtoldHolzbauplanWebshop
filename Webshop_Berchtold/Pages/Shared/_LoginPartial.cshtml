@using Microsoft.AspNetCore.Identity
@using Webshop_Berchtold.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var firstName = User.FindFirst("FirstName")?.Value ?? "Benutzer";
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = currentUser != null && await UserManager.IsInRoleAsync(currentUser, "Admin");
    
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle"></i> Hallo, @firstName
        </a>
        <ul class="dropdown-menu" aria-labelledby="userDropdown">
            <li><h6 class="dropdown-header">@firstName @(User.FindFirst("LastName")?.Value ?? "")</h6></li>
            <li><small class="dropdown-item-text text-muted">@User.Identity!.Name</small></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Profil</a></li>
            <li><a class="dropdown-item" href="#"><i class="bi bi-bag"></i> Meine Bestellungen</a></li>
            <li><a class="dropdown-item" href="#"><i class="bi bi-gear"></i> Einstellungen</a></li>
            @if (isAdmin)
            {
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-page="/Admin"><i class="bi bi-shield-lock"></i> Admin Panel</a></li>
            }
            <li><hr class="dropdown-divider"></li>
            <li>
                <form method="post" asp-page="/Logout" class="d-inline">
                    <button type="submit" class="dropdown-item">
                        <i class="bi bi-box-arrow-right"></i> Abmelden
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-page="/Register">
            <i class="bi bi-person-plus"></i> Registrieren
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/Login">
            <i class="bi bi-person"></i> Anmelden
        </a>
    </li>
}
</ul>
